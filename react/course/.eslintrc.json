{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "settings": {
    //自动发现React的版本，从而进行规范react代码
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "plugins": ["react"],
  "rules": {}
}
